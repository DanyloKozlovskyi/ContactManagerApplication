@model Person
@{
    ViewBag.Title = "Delete Person";
}

<a asp-controller="Person" asp-action="Index" class="link-hover">Back to People List</a>
<h2>@ViewBag.Title</h2>
<div class="w-50">
    <form asp-controller="Person" asp-action="Delete" method="post">
        @*Name*@
        <div class="form-field flex">
            <div class="w-25">
                <label for="Name" class="form-label pt">Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="Name" class="form-input"/>
                <span asp-validation-for="Name" class="text-red"></span>
            </div>
        </div>
        @*DateOfBirth*@
        <div class="form-field flex">
            <div class="w-25">
                <label for="DateOfBirth" class="form-label pt">Date of birth</label>
            </div>
            <div class="flex-1">
                <input type="date" asp-for="DateOfBirth" class="form-input" />
                <span asp-validation-for="DateOfBirth" class="text-red"></span>
            </div>
        </div>
        @*Submit*@
        <div class="form-field flex">
            <div class="flex-1">
                <button class="button button-green-back">Delete</button>
            </div>
        </div>
        <div asp-validation-summary="All"></div>
    </form>
</div>